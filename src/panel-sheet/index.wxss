.action-sheet {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    visibility: hidden
  }
  
  .visible {
    visibility: visible
  }
  
  .action-sheet .sheet {
    position: absolute;
    height: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: white;
    border-radius: 30px 30px 0 0;
    transition: height 400ms linear;
  }
  
  .action-sheet .active {
    height: 75%;
  }
  
  .sheet .header {
    position: relative;
    height: 42px;
  }
  
  .label-icon {
    position: absolute;
    top: -58px;
    left: 0;
    right: 0;
    overflow: hidden;
    text-align: center;
  }
  
  .close {
    position: absolute;
    right: 10px;
    top: 15px;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    background-color: #ebebeb;
    text-align: center;
    font-weight: 800;
    color: white;
    box-shadow: 1px 2px 1px #bbb;
  }
  
  .body {
    height: calc(100% - 42px)
  }
  
  .meteor-body{
      width: 18.75rem;
    height: 30.5rem;
      background: transparent;
      overflow: hidden;
      z-index: 0;
    margin: 0 auto;
    background: linear-gradient(rgba(0, 108, 172, 1), rgba(0, 122, 195, .7))
  }
  .main-con{
      width: 100%;
      height: 100%;
      position: relative;
      transform: rotate(45deg);
  }
  