.action-sheet {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    visibility: hidden;
    transition: visibility 0.5s;
  }
  
  .visible {
    visibility: visible
  }
  
  .action-sheet .sheet {
    position: absolute;
    height: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: white;
    border-radius: 30px 30px 0 0;
    transition: height 400ms linear;
  }
  
  .action-sheet.visible .sheet {
    height: 75%;
  }
  
  .sheet .header {
    position: relative;
    height: 42px;
  }
  
  .label-icon {
    position: absolute;
    top: -58px;
    left: 0;
    right: 0;
    overflow: hidden;
    text-align: center;
  }

  .icon {
    width: 100px;
    height: 100px;
    padding: 12px;
    box-sizing: border-box;
    margin: 0 auto;
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 0px 4px 0px #ebebeb;
  }
  
  
  .close {
    position: absolute;
    right: 10px;
    top: 15px;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    background-color: #ebebeb;
    text-align: center;
    font-weight: 800;
    color: white;
    box-shadow: 1px 2px 1px #bbb;
  }
  
  .body {
    height: calc(100% - 42px)
  }
  
  .body .label {
    border-bottom: 1px solid #f7f7f7;
    padding-bottom: 5px;
    text-indent: 25px;
    font-size: 14px;
    color: #4f493a;
    font-weight: 500;
  }

  .meteor-body{
      width: 18.75rem;
    height: 30.5rem;
      background: transparent;
      overflow: hidden;
      z-index: 0;
    margin: 0 auto;
    background: linear-gradient(rgba(0, 108, 172, 1), rgba(0, 122, 195, .7))
  }
  .main-con{
      width: 100%;
      height: 100%;
      position: relative;
      transform: rotate(45deg);
  }
  